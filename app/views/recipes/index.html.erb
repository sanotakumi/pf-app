
<div class="container">
  <h4 class = "col-3 text-center" style = "background-color:lightgray">レシピ一覧</h4>
  <div class="d-flex flex-wrap">
    <% @recipes.each do |recipe| %>
      <%# if recipe.recipe_ings.present? %>
      <div class="col-md-3">
        <div class="card">
          <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
            <%= link_to recipe_path(recipe.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
              <%= attachment_image_tag recipe, :image, format: 'jpeg', size: "248x200"%><br>
              <%= recipe.name %><br>
            <% end %>
          </div>
        </div>
      </div>
      <%# end %>
    <% end %>
  </div>
</div>