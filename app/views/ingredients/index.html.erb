<div class = "container o-8column">
  <div class = "row">
    <h4 class = "text-center"><span style = "background-color:lightgray">食材一覧</span></h4>
  </div>

  <div class="container">
    <table class="table">
      <thead class="thead-light">
        <div class ="row justify-content-center">
          <tr>
            <th>商品ID</th>
            <th>食材名</th>
            <th>カロリー</th>
            <th>たんぱく質</th>
            <th>脂質</th>
            <th>炭水化物</th>
            <th>食塩相当量</th>
            <th>ビタミンB1</th>
            <th>ビタミンB2</th>
            <th>ビタミンC</th>
            <th></th>
          </tr>
        </div>
      </thead>

      <tbody>
        <% @ingredients.each do |ingredient| %>
          <tr>
            <td><%= ingredient.id %></td>
            <td><%= ingredient.name %></td>
            <td><%= ingredient.ing_cal %>Kcal</td>
            <td><%= ingredient.ing_protein %>g</td>
            <td><%= ingredient.ing_fat %>g</td>
            <td><%= ingredient.ing_carbon %>g</td>
            <td><%= ingredient.ing_salt %>g</td>
            <td><%= ingredient.ing_vit_b1 %>mg</td>
            <td><%= ingredient.ing_vit_b2 %>mg</td>
            <td><%= ingredient.ing_vit_c %>mg</td>
            <td><%= link_to '追加', recipe_ings_path(:recipe_id => @recipe.id, :ingredient_id => ingredient.id), method: "post", class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
