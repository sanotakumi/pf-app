<!DOCTYPE html>
<html>
  <head>
    <title>ALL-F</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <main class="d-flex flex-column vh-100">
      <header>


      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <%= link_to "ALL-F", root_path, class: "mt-2" %>

          <div>
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="ml-3">
                  <%= link_to "マイページ", user_path(current_user.id), class: "btn btn-outline-info" %>
                </li>
                <li class="ml-3">
                  <%= link_to "レシピ一覧", recipes_path, class: "btn btn-outline-info" %>
                </li>
                <li class="ml-3">
                  <%= link_to "献立", menus_path, class: "btn btn-outline-info" %>
                </li>
                <li class="ml-3 mr-1">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-info" %>
                </li>
                <% else %>
                <li class="ml-3">
                  <%= link_to "レシピ一覧", recipes_path, class: "btn btn-outline-info" %>
                </li>
                <li class="ml-3">
                  <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-info" %>
                </li>
                <li class="ml-3 mr-1">
                  <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-info" %>
                </li>
              <% end %>
            </ul>
          </div>
          </div>
        </div>
      </nav>
    </header>

  <body>
    <%= yield %>
  </body>
</html>
