<div id="container" class="mb-5 text-center text-dark">
  <div id="theTarget">
    <div class="background-image">
      <h3 class="pb-5 pt-5" id="top-massage">
        ようこそ、ALL-Fへ！<br><br>
        このサイトはレシピ投稿型のECサイトになります。<br>
      </h3>
    </div>

  </div>


<div class="container" style="font-family: 'Noto Sans JP',serif;">
    <div class="row pb-5 pt-5 max-auto">

        <div class="col-sm-12">
          <h2><span class="under-line">新着レシピ</span></h2>
          <div class="row">

            <% @recipes.last(4).reverse.each do |recipe| %>
              <div class="col-sm-3">
                <div class="card">

                  <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
                    <%= link_to recipe_path(recipe.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
                      <%= attachment_image_tag recipe, :image, format: 'jpeg', size: "252x200"%><br>
                        <%= recipe.name %><br>
                        <%= recipe.cal.to_s(:delimited, delimiter: ',') %>kcal
                      <% end %>
                  </div>

                </div>
              </div>
            <% end %>

          </div>

          <div class="text-right">
            <%= link_to "全ての商品を見る ＞", recipes_path %>
          </div>
        </div>

    </div>
</div>